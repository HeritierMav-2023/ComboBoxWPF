<Window x:Class="LieuXP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LieuXP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Expander Header="Lieu d’expertise" IsExpanded="False" Margin="10">
        <Grid Margin="10">
            <!-- Colonnes : 5 -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" />
                <!-- Libellé -->
                <ColumnDefinition Width="2*" />
                <!-- Champ 1 -->
                <ColumnDefinition Width="1*" />
                <!-- Espace -->
                <ColumnDefinition Width="1.5*" />
                <!-- Libellé ou champ complémentaire -->
                <ColumnDefinition Width="2*" />
                <!-- Champ 2 -->
            </Grid.ColumnDefinitions>

            <!-- Lignes : 6 -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!-- Lieu d'expertise -->
                <RowDefinition Height="Auto" />
                <!-- Adresse ligne 1 -->
                <RowDefinition Height="Auto" />
                <!-- Adresse ligne 2 -->
                <RowDefinition Height="Auto" />
                <!-- CP / Ville -->
                <RowDefinition Height="Auto" />
                <!-- Téléphones -->
                <RowDefinition Height="Auto" />
                <!-- Mail -->
            </Grid.RowDefinitions>

            <!-- Ligne 1 : Lieu d'expertise -->
            <TextBlock Text="Lieu d’expertise :" 
                   Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" />
            <ComboBox Grid.Row="0" Grid.Column="1" Width="160" Margin="5,0,0,5">
                <ComboBoxItem Content="Autre" IsSelected="True" />
                <ComboBoxItem Content="Cabinet" />
                <ComboBoxItem Content="Clinique" />
                <ComboBoxItem Content="Hôpital" />
            </ComboBox>

            <!-- Ligne 2 : Adresse -->
            <TextBlock Text="Adresse :" 
                   Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" />
            <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" Margin="5,0,0,5" />

            <!-- Ligne 3 : Adresse complémentaire -->
            <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" Margin="5,0,0,5" />

            <!-- Ligne 4 : CP / Ville -->
            <TextBlock Text="CP :" 
                   Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" />
            <TextBox Grid.Row="3" Grid.Column="1" Width="80" Margin="5,0,0,5" />

            <TextBlock Text="Ville :" 
                   Grid.Row="3" Grid.Column="3" VerticalAlignment="Center" />
            <TextBox Grid.Row="3" Grid.Column="4" Margin="5,0,0,5" />

            <!-- Ligne 5 : Téléphone fixe / Portable -->
            <TextBlock Text="Téléphone fixe :" 
                   Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" />
            <TextBox Grid.Row="4" Grid.Column="1" Width="120" Margin="5,0,0,5" />

            <TextBlock Text="Portable :" 
                   Grid.Row="4" Grid.Column="3" VerticalAlignment="Center" />
            <TextBox Grid.Row="4" Grid.Column="4" Width="120" Margin="5,0,0,5" />

            <!-- Ligne 6 : Mail -->
            <TextBlock Text="Mail :" 
                   Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" />
            <TextBox Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="4" Margin="5,0,0,5" />
        </Grid>
    </Expander>

</Window>
