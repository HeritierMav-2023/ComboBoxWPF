<Window x:Class="BlocExpertMisAjour1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converter="clr-namespace:BlocExpertMisAjour1"
        xmlns:local="clr-namespace:BlocExpertMisAjour1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <converter:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="20">
        <!-- Définition explicite des colonnes -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="30" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Médecin avec données -->
        <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1"
                Padding="15" CornerRadius="6" Margin="0,0,10,0">
            <StackPanel DataContext="{Binding MedecinAvecData}">
                <TextBlock Text="Médecin avec données" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                <!-- Nom / Prénom -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Nom :" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox Width="150" Text="{Binding Nom, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,20,0"/>
                    <TextBlock Text="Prénom :" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox Width="150" Text="{Binding Prenom, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <!-- Coordonnées : visible si HasData == true -->
                <StackPanel Visibility="{Binding HasData, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Adresse :" Margin="0,0,0,5"/>
                    <TextBox Width="400" Text="{Binding Adresse, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Séparateur (colonne 1) -->
        <Rectangle Grid.Column="1" Width="1" Fill="LightGray" VerticalAlignment="Stretch"/>

        <!-- Médecin sans données -->
        <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="1"
                Padding="15" CornerRadius="6" Margin="10,0,0,0">
            <StackPanel DataContext="{Binding MedecinSansData}">
                <TextBlock Text="Médecin sans données" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                <!-- Nom / Prénom -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Nom :" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox Width="150" Text="{Binding Nom, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,20,0"/>
                    <TextBlock Text="Prénom :" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox Width="150" Text="{Binding Prenom, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <!-- Coordonnées (sera masquée si HasData == false) -->
                <StackPanel Visibility="{Binding HasData, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Adresse :" Margin="0,0,0,5"/>
                    <TextBox Width="400" Text="{Binding Adresse, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
