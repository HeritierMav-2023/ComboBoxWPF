            --><!-- Type de mission / Expertise --><!--
            <RowDefinition Height="20" />
            --><!-- Espacement --><!--
            <RowDefinition Height="Auto" />
            --><!-- Médecin --><!--
            <RowDefinition Height="Auto" />
            --><!-- Informations médecin --><!--
            <RowDefinition Height="20" />
            --><!-- Espacement --><!--
            <RowDefinition Height="Auto" />
            --><!-- Commentaires --><!--
            <RowDefinition Height="*" />
