<Window x:Class="ExpenderDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExpenderDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <!-- 5 colonnes -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- 6 lignes -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Nom / Prénom visibles -->
            <RowDefinition Height="Auto" />
            <!-- Expander : autres infos -->
        </Grid.RowDefinitions>

        <!-- Ligne 1 : Nom / Prénom (toujours visible) -->
        <TextBlock Text="Nom :" 
               Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" />
        <TextBox Grid.Row="0" Grid.Column="1" Margin="5,3" />

        <TextBlock Text="Prénom :" 
               Grid.Row="0" Grid.Column="3" VerticalAlignment="Center" />
        <TextBox Grid.Row="0" Grid.Column="4" Margin="5,3" />

        <!-- Ligne 2 : Expander pour les autres infos -->
        <Expander Header="Autres informations" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" Margin="0,10,0,0">
            <Grid Margin="10">
                <!-- Colonnes internes -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1.5*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <!-- Lignes internes -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <!-- Adresse -->
                    <RowDefinition Height="Auto" />
                    <!-- Adresse 2 -->
                    <RowDefinition Height="Auto" />
                    <!-- CP / Ville -->
                    <RowDefinition Height="Auto" />
                    <!-- Téléphones -->
                    <RowDefinition Height="Auto" />
                    <!-- Mail -->
                </Grid.RowDefinitions>

                <!-- Adresse -->
                <TextBlock Text="Adresse :" 
                       Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" />
                <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4" Margin="5,0,0,5" />

                <!-- Adresse complémentaire -->
                <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" Margin="5,0,0,5" />

                <!-- CP / Ville -->
                <TextBlock Text="CP :" 
                       Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" />
                <TextBox Grid.Row="2" Grid.Column="1" Width="80" Margin="5,0,0,5" />

                <TextBlock Text="Ville :" 
                       Grid.Row="2" Grid.Column="3" VerticalAlignment="Center" />
                <TextBox Grid.Row="2" Grid.Column="4" Margin="5,0,0,5" />

                <!-- Téléphones -->
                <TextBlock Text="Téléphone fixe :" 
                       Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" />
                <TextBox Grid.Row="3" Grid.Column="1" Width="120" Margin="5,0,0,5" />

                <TextBlock Text="Portable :" 
                       Grid.Row="3" Grid.Column="3" VerticalAlignment="Center" />
                <TextBox Grid.Row="3" Grid.Column="4" Width="120" Margin="5,0,0,5" />

                <!-- Mail -->
                <TextBlock Text="Mail :" 
                       Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" />
                <TextBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="4" Margin="5,0,0,5" />
            </Grid>
        </Expander>
    </Grid>
</Window>
