<Window x:Class="ExpenderDemo2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExpenderDemo2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Expander Header="Autre médecin" IsExpanded="False" Margin="10">
        <Grid Margin="10">
            <!-- 5 colonnes -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" />
                <!-- Libellés -->
                <ColumnDefinition Width="2*" />
                <!-- Champ 1 -->
                <ColumnDefinition Width="1*" />
                <!-- Espace -->
                <ColumnDefinition Width="1.5*" />
                <!-- Libellé ou champ complémentaire -->
                <ColumnDefinition Width="2*" />
                <!-- Champ 2 -->
            </Grid.ColumnDefinitions>

            <!-- 6 lignes -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!-- Nom / Prénom -->
                <RowDefinition Height="Auto" />
                <!-- Adresse ligne 1 -->
                <RowDefinition Height="Auto" />
                <!-- Adresse ligne 2 -->
                <RowDefinition Height="Auto" />
                <!-- CP / Ville -->
                <RowDefinition Height="Auto" />
                <!-- Téléphones -->
                <RowDefinition Height="*" />
                <!-- Espace ou autres infos -->
            </Grid.RowDefinitions>

            <!-- Ligne 1 : Nom / Prénom -->
            <TextBlock Text="Nom :" 
                   Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" />
            <TextBox Grid.Row="0" Grid.Column="1" Margin="60,0,10,5" />

            <TextBlock Text="Prénom :" 
                   Grid.Row="0" Grid.Column="3" VerticalAlignment="Center" />
            <TextBox Grid.Row="0" Grid.Column="4" Margin="5,0,0,5" />

            <!-- Ligne 2 : Adresse -->
            <TextBlock Text="Adresse :" 
                   Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" />
            <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" Margin="5,0,0,5" />

            <!-- Ligne 3 : Adresse complémentaire -->
            <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" Margin="5,0,0,5" />

            <!-- Ligne 4 : CP / Ville -->
            <TextBlock Text="CP :" 
                   Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" />
            <TextBox Grid.Row="3" Grid.Column="1" Width="80" Margin="5,0,0,5" />

            <TextBlock Text="Ville :" 
                   Grid.Row="3" Grid.Column="3" VerticalAlignment="Center" />
            <TextBox Grid.Row="3" Grid.Column="4" Margin="5,0,0,5" />

            <!-- Ligne 5 : Téléphones et mail -->
            <TextBlock Text="Téléphone fixe :" 
                   Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" />
            <TextBox Grid.Row="4" Grid.Column="1" Width="120" Margin="5,0,0,5" />

            <TextBlock Text="Portable :" 
                   Grid.Row="4" Grid.Column="3" VerticalAlignment="Center" />
            <TextBox Grid.Row="4" Grid.Column="4" Width="120" Margin="5,0,0,5" />

            <TextBlock Text="Mail :" 
                   Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" />
            <TextBox Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="4" Margin="5,0,0,5" />
        </Grid>
    </Expander>
</Window>
